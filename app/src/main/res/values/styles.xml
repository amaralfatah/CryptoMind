<?xml version="1.0" encoding="utf-8"?>
<!-- styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonSmall" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary_dark_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="toastNormal">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#1E1F22</item>
        <item name="stColorBackground">#FFFFFF</item>
        <item name="stSolidBackground">true</item>
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="toastTrue">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stColorBackground">#57955C</item>
        <item name="stSolidBackground">true</item>
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="toastFalse">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stColorBackground">#C84F4F</item>
        <item name="stSolidBackground">true</item>
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="toastNormalBot">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#1E1F22</item>
        <item name="stColorBackground">#CBEDEDED</item>
        <item name="stSolidBackground">true</item>
        <item name="stRadius">5dp</item>
    </style>

</resources>
