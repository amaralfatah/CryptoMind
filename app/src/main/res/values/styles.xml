<?xml version="1.0" encoding="utf-8"?>
<!-- styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonSmall" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary_dark_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CardTitleText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="CardContentText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
    </style>
</resources>
